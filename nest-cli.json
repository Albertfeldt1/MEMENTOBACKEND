{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "src/notification/templates/**/*",
        "outDir": "dist/src/notification/templates"
      },
        {
        "include": "src/i18n/**/*",
        "outDir": "dist/i18n"
      }
    ]
  }
}
